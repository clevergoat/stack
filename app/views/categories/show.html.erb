<section>

	<% @category.links.each do |link| %>

		<div class="link">

			<div class="details">
				<h3><%= link_to link.name, link.url %></h3>
				<p><%= link.description %></p>
				<p><%= link_to link.url, link.url %></p>
			</div>

			<div class="actions">
				<%= link_to "Edit", edit_category_link_path(@category, link), class: "edit" %>

				<%= link_to "Duplicate", new_category_link_path(@category), class: "edit" %>

				<%= link_to "Delete", category_link_path(@category, link), method: :delete, class: "delete", confirm: "Are you sure you want to delete?" %>

			</div>

		</div>

	<% end %>


</section>



<%= link_to "Add new link", new_category_link_path(@category), class: "button" %>
<%= link_to "Back to the categories", root_path, class: "button" %>